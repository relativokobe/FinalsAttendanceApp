<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ahdz_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.asus.finalsattendanceapp.AhdzHome">

    <android.support.design.widget.TabLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/tab"
        android:layout_gravity="top"
        app:tabTextColor="#000000"
        app:tabIndicatorColor="#FFA500"
        app:tabSelectedTextColor="#000000"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tab"></FrameLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/Fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout_gravity=""
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/common_google_signin_btn_icon_light_normal"
        />

</RelativeLayout>
